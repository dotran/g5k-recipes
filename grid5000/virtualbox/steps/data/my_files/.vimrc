"execute pathogen#infect()
syntax on
filetype plugin indent on
"set background=dark
set background=light
"colorscheme solarized

" Eliminate bold face for Git Bash
"set t_md=

set showcmd
set showmatch
set ignorecase
set smartcase
set incsearch

" Status bar configuration
"set ruler
"set laststatus=2
"set statusline=%<%f%h%m%r%=%l,%c\ %P
" Highlight searched items
set hlsearch
" Go to next/previous line with left/right arrow
"set whichwrap=<,>,[,]

set tabstop=4
set softtabstop=4
set shiftwidth=4
